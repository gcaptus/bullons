{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="login-content">
            <div class="log-title">
                <h3>Login</h3>
            </div>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="container container-login">
            <div class="row row-login">

                {#<label for="username">{{ 'security.login.username'|trans }}</label>#}
                <input type="text" id="username" name="_username" class="login-input" placeholder="username" value="{{ last_username }}" required="required" autocomplete="username" />

                {#<label for="password">{{ 'security.login.password'|trans }}</label>#}
                <input type="password" id="password" class="login-input" name="_password" placeholder="password" required="required" autocomplete="current-password" />

                <div class="login-checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>

                <input type="submit" id="_submit" class="btn btn-dark" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
        </div>
    </form>
</div>